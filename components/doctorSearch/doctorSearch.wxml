<view class="modal-box">
  <view class="modal-card">
    <view class="title">
      <view class="cloose" bindtap="onCancel">
        <image src="../../assets/close.png"></image>
      </view>
    </view>
    <scroll-view class="card_body" style="height:600rpx" scroll-y="true">
      <form bindsubmit="searchDoctor" class="searchDoctor">
        <input class="search_name" type="text" placeholder="以专家姓名搜索"></input>
        <input class="search_name" type="text" placeholder="请选择所属医院"></input>
        <input class="search_name" type="text" placeholder="请选择所属科室"></input>
        <input class="search_name" type="text" placeholder="请选择专家职称"></input>
      </form>
    </scroll-view>
    <view class="getNow">
      <view>搜索</view>
    </view>
  </view>
  <view class="modal-cover"></view>
</view>