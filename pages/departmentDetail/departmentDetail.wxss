.container {
  width: 100%;
}

.header {
  position: relative;
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}

.header image {
  display: block;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 5;
}

.header .title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  width: 420rpx;
  height: 120rpx;
  background: #ffffff;
  border-radius: 10rpx;
  text-align: center;
  line-height-step: 120rpx;
  color: #1d7bae;
  border: 2rpx solid #1d7bae;
}

/* content */
.content {
  width: 100%;
  margin-top: 4rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.department_content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  border-radius: 10rpx;
  padding: 16rpx 10rpx;
  box-sizing: border-box;
  border: 2rpx solid #1d7bae;
  margin-bottom: 20rpx;
  color: #ffffff;
  background-image: linear-gradient(to right, #1d7bae, #ffffff);
}

.right_icon {
  color: #1d7bae;
}

.noData {
  font-size: 28rpx;
  color: #888888;
  padding: 20rpx;
  box-sizing: border-box;
}
.noData .word{
  text-align: center;
}
.title {
  color: #1d7bae;
  border-left: 2px solid #1d7bae;
  padding-left: 10rpx;
  margin-bottom: 20rpx;
}