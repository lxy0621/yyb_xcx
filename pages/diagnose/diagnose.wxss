page {
  background: #eeeeee;
}

.container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

swiper {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
  transform: translateY(0);
  overflow: hidden;
  z-index: 5;
}

swiper image {
  width: 710rpx;
  height: 360rpx;
}

/* function */
.function {
  margin-top: 10rpx;
  width: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}

.function .function_item {
  width: 100%;
  height: 180rpx;
  background: #ffffff;
  border-radius: 10rpx;
}