page {
  background: #eee;
}

.container {
  padding-top: 90rpx;
  box-sizing: border-box;
}

.doctor_item {
  width: 100%;
  background: #fff;
  margin-bottom: 10rpx;
  display: flex;
}

.item_l {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.item_l image {
  display: block;
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
}

.item_r {
  flex: 3;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
}

.item_r .name {
  font-weight: bold;
  font-size: 28rpx;
}

.item_r .good_at {
  font-size: 24rpx;
  color: #888888;
}

.item_r .resume {
  font-size: 24rpx;
  color: #888888;
  margin: 10rpx 0;
}

.item_r .sex {
  font-size: 24rpx;
  color: #888888;
  margin: 10rpx 0;
}

.name span {
  padding-left: 24rpx;
  font-weight: normal;
  font-size: 24rpx;
  color: #888;
}

.nodata {
  text-align: center;
  color: #888888;
  font-size: 24rpx;
  padding-top: 120rpx;
  box-sizing: border-box;
}

.search {
  position: fixed;
  width: 100%;
  height: 90rpx;
  background: #1d7bae;
  padding: 18rpx 20rpx;
  box-sizing: border-box;
}

.search_content {
  width: 100%;
  height: 54rpx;
  background: #fff;
  border-radius: 27rpx;
  text-align: center;
  line-height: 54rpx;
  text-align: center;
  color: #888888;
  font-size: 24rpx;
}

.loadmore {
  color: #888;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
  padding-top: 30rpx;
  box-sizing: border-box;
}

/* 弹出框 */
.modal {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 680rpx;
  background: #ffffff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  z-index: 10;
}

.modal_header {
  width: 100%;
  height: 90rpx;
  background: #1d7bae;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.item1 {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.item1 image {
  width: 48rpx;
}

.item2 {
  flex: 3;
  color: #ffffff;
  text-align: center;
  line-height: 90rpx;
}

.modal_body {
  padding: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.modal_body .btn {
  margin-top: 370rpx;
}

/*动画前初始位置*/
.bottom-positon {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.modal_cover {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .8);
  z-index: 5;
}