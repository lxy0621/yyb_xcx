page {
  background: #eeeeee;
}
.container{
  padding-bottom: 90rpx;
  box-sizing: border-box;
}
.doctor_message {
  width: 100%;
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.top_message {
  width: 100%;
  display: flex;
}

.top_message .name {
  flex: 3;
  padding: 20rpx;
  box-sizing: border-box;
}

.name .doctor_name {
  font-weight: bold;
  margin-bottom: 20rpx;
}

.name .doctor_title {
  font-size: 28rpx;
  color: #888888;
}

.top_message .avatar {
  flex: 1;
  width: 200rpx;
  height: 240rpx;
  overflow: hidden;
}

.top_message .avatar image {
  display: block;
  width: 100%;
}

.bottom_message {
  width: 100%;
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
}

.bottom_message .title {
  font-weight: bold;
  color: #1d7bae;
}

.bottom_message .vice_title {
  font-weight: bold;
  font-size: 24rpx;
  border-left: 6rpx solid #1d7bae;
  margin: 20rpx 0;
  padding-left: 10rpx;
}

.goodAt,
.resume {
  font-size: 28rpx;
  color: #888888;
}

.order {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background: #1d7bae;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
}