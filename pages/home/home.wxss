page {
  background: #eee;
}

.container {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.top {
  width: 100%;
  height: 360rpx;
  background: #ccc;
  position: relative;
}

.search {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  z-index: 10;
}

.search .search_l {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
}

.search .search_l view {
  font-size: 24rpx;
}

.search .search_r {
  flex: 3;
  padding: 10rpx;
  box-sizing: border-box;
}

.search .search_r view {
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, .8);
  opacity: 0.8;
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
  color: #888888;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
}

.bannerSwiper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
  transform: translateY(0);
  overflow: hidden;
  z-index: 5;
}

.bannerSwiper image {
  width: 710rpx;
  height: 360rpx;
}

.function {
  width: 100%;
  height: 180rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  overflow: hidden;
  margin: 10rpx 0;
  display: flex;
}

.function_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.function_item image {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin-bottom: 12rpx;
}

.function_item view {
  font-size: 28rpx;
}
.tabs{
  border-radius: 10rpx;
  overflow: hidden;
}
.tab-h {
  height: 80rpx;
  width: 100%;
  padding: 8rpx 20rpx;
  box-sizing: border-box;
  line-height: 64rpx;
  background: #ffffff;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.tab-item.active {
  color: #4675F9;
  border-bottom: 4rpx solid #4675F9;
}

.scoll-h {
  height: 100%;
}

.news_content {
  width: 100%;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  overflow: hidden;
}

.news_item {
  background: #ffffff;
  width: 100%;
  height: 210rpx;
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
}

.item_l {
  flex: 1;
}

.item_l image {
  display: block;
  width: 100%;
  height: 100%;
}

.item_r {
  flex: 2;
  padding-left: 20rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.item_r .title {
  font-size: 28rpx;
  font-weight: bold;
}

.item_r .time {
  font-size: 24rpx;
}

.time span {
  color: #888888;
}