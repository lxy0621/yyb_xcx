page {
  background: #eeeeee;
}

.header_pic {
  width: 100%;
  height: 440rpx;
  background: #ffffff;
}

.header_pic image {
  width: 100%;
  height: 440rpx;
  display: block;
}

.hospital_content {
  width: 100%;
  background: #ffffff;
  padding: 20rpx;
  box-sizing: border-box;
  margin-bottom: 10rpx;
}

.hospital_content .name {
  font-weight: bold;
  margin-bottom: 20rpx;
}

.hospital_content .introduction {
  font-size: 28rpx;
}

.hospital_content .title {
  font-size: 28rpx;
  font-weight: blod;
  border-left: 6rpx solid #1d7bae;
  color: #1d7bae;
  padding-left: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.hospital_content .detail {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.detail .detail_item {
  width: 50%;
  font-size: 24rpx;
  margin: 10rpx 0;
  display: flex;
}

.department_item {
  display: flex;
  padding: 20rpx 0;
  border-radius: 10rpx;
  box-sizing: border-box;
  background: #1d7bae;
  margin: 10rpx 0;
}

.department_item .item_l {
  flex: 10;
  font-size: 28rpx;
  color: #ffffff;
  padding-left: 20rpx;
}

.department_item .item_r {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.noData {
  text-align: center;
  font-size: 28rpx;
  color: #888888;
}