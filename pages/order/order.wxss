  /* ------------ordinary content---------------- */
  .ordinary {
    padding: 0 20rpx;
    box-sizing: border-box;
  }

  .picker {
    width: 100%;
    padding: 20rpx 0;
    box-sizing: border-box;
    border-bottom: 2rpx solid #e7e7e7;
    color: #888888;
  }

  .picker text {
    color: #000000;
  }

  .tab-h {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #F7F7F7;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }

  .tab-item {
    flex: 1;
    box-sizing: border-box;
    border-bottom: 6rpx solid transparent;
    text-align: center;
  }

  .tab-item.active {
    color: #4675F9;
    border-bottom: 6rpx solid #4675F9;
  }

  .scoll-h {
    height: 100%;
    font-size: 28rpx;
  }

  .name,
  .identNumb,
  .telNumb {
    padding: 20rpx 0;
    box-sizing: border-box;
    display: flex;
    border-bottom: 2rpx solid #e7e7e7;
  }

  .code {
    display: flex;
    padding: 20rpx 0;
    box-sizing: border-box;
    border-bottom: 2rpx solid #e7e7e7;
  }

  .code .code_l {
    flex: 3;
    display: flex;
  }

  .code_l input {
    width: 300rpx;
  }

  .code .code_r {
    flex: 1;
    color: #1d7bae;
  }

  .name .title {
    color: #000000;
  }

  .time {
    padding: 20rpx 0;
    box-sizing: border-box;
  }

  .time .radio_item {
    display: flex;
    padding: 20rpx 0;
  }

  .radio_item .weui-check__label {
    flex: 1;
    font-size: 24rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .illnessDesc textarea {
    border: 1px solid #cccccc;
    width: 100%;
    height: 120rpx;
    padding: 10rpx;
    margin-top: 20rpx;
    border-radius: 10rpx;
    box-sizing: border-box;
  }

  .btn button {
    margin-top: 20rpx;
  }

  .fast {
    padding: 0 20rpx;
    box-sizing: border-box;
  }